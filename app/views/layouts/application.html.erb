<!DOCTYPE html>
<html>
<head>
  <title>TaskTracker3</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
    <div id="tt3-header">
      <% if user_signed_in? %>

        <div id="user_nav">
          Signed in  : <b><%= current_user.email %></b> | 
          <%= link_to "Sign out", destroy_user_session_path %>
        </div>
        <ul id="list_nav">
          <li><%= link_to "Projects", projects_path %></li>
           <li><%= link_to "Activities", activities_path %></li>
         </ul>

      <% end %>
      
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

    </div>
    <div id="container">
      
      <% if show_title? %>
        <h1><%= yield(:title) %></h1>
      <% end %>
      
      <%= yield %>
    </div>
</body>
</html>
